<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/goal"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/title"
        app:layout_constraintStart_toEndOf="@+id/title"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/goal" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Achievements"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/goal"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@id/goal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/game1title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Capture the Star"
                android:textSize="25sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/max_score1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Maximum Score: 0"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/game1title" />

            <ImageView
                android:id="@+id/medal1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/medal2"
                app:layout_constraintTop_toBottomOf="@id/max_score1"
                app:srcCompat="@drawable/medal"
                tools:layout_constraintLeft_toLeftOf="parent" />

            <ImageView
                android:id="@+id/medal2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toStartOf="@+id/medal3"
                app:layout_constraintStart_toEndOf="@+id/medal1"
                app:layout_constraintTop_toBottomOf="@id/max_score1"
                app:srcCompat="@drawable/medal" />

            <ImageView
                android:id="@+id/medal3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                app:layout_constraintLeft_toRightOf="@id/medal2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/max_score1"
                app:srcCompat="@drawable/medal" />

            <ImageView
                android:id="@+id/star1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:visibility="invisible"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/star2"
                app:layout_constraintTop_toBottomOf="@id/max_score1"
                app:srcCompat="@drawable/medal_color" />

            <ImageView
                android:id="@+id/star2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:visibility="invisible"
                app:layout_constraintLeft_toRightOf="@id/star1"
                app:layout_constraintRight_toLeftOf="@id/star3"
                app:layout_constraintTop_toBottomOf="@id/max_score1"
                app:srcCompat="@drawable/medal_color" />

            <ImageView
                android:id="@+id/star3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:visibility="invisible"
                app:layout_constraintLeft_toRightOf="@id/medal2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/max_score1"
                app:srcCompat="@drawable/meteor" />

            <TextView
                android:id="@+id/game1text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                app:layout_constraintLeft_toLeftOf="@id/medal1"
                app:layout_constraintTop_toBottomOf="@id/medal1"
                tools:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/game1text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                app:layout_constraintLeft_toLeftOf="@id/medal2"
                app:layout_constraintTop_toBottomOf="@id/medal1" />

            <TextView
                android:id="@+id/game1text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                app:layout_constraintLeft_toLeftOf="@id/medal3"
                app:layout_constraintTop_toBottomOf="@id/medal1" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>